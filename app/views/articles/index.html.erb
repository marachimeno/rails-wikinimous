<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="http://localhost:3000/articles">Wikinimous</a>
  <a class="my-2 my-sm-0"><%= link_to "Create new Article", articles_new_path %></a>
</nav>

<% @articles.each do |article| %>
<div class="mx-auto p-5" style="width: 700px;">
  <h2><%= link_to article.title, article_path(article) %></h2>
  <h4 class="font-weight-light"><%= article.content %></h4>
  <%= link_to "Delete",
          article_path(article),
          class: "btn btn-dark",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
</div>
<% end %>

